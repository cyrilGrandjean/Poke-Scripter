{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "target": "ES2020",
    "typeRoots": ["types", "node_module/@types"]
  },
  "exclude": [
    "node_modules"
  ]
}
